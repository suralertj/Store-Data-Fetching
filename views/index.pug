extends layout
block content
    h1= title
    p= message

        div(class='ui divided unstackable items')
            each product in products
                div(class='item')
                    div(class='image')
                        img(src=`${product.url}` )             
                    div(class='content')
                        div(class='header')= product.name
                        div(class='meta')
                            span= product.price
                        div(class='description')
                            p= product.description
                        div(class='extra')
                            p available
                        